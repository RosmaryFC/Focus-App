

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"

    android:background="@color/style_color_primary_dark"
    tools:context="nyc.c4q.rosmaryfc.focus_app.AppUsage">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:id="@+id/blockon_textmsg"

        android:src="@drawable/block_on_logo"


        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="60dp"/>
    <ImageView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/blockon_image"
        android:layout_marginTop="20dp"
        android:src="@drawable/blockon2"

        android:layout_below="@+id/blockon_textmsg"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message"
        android:textSize="26sp"
        android:fontFamily="Roboto"

        android:textAlignment="center"
        android:gravity="center|bottom"
        android:textStyle="bold"

        android:textColor="#FFFFFF"

        android:id="@+id/message_popup"

        android:layout_below="@+id/blockon_textmsg"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"/>


</RelativeLayout>
