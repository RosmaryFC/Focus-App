<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nyc.c4q.rosmaryfc.focus_app.AppUsage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/abc_text_size_body_2_material"
        android:text=" It's your scheduled focus session. Shouldn't you be focusing?"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/go_to_monitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="App Monitor"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_send_comment"/>

</LinearLayout>
