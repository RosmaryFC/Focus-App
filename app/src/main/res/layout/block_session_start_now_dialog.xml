<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:text="SET IMMEDIATE"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#FFF"
            android:background="#512DA8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title_2"
            android:text="BLOCK SESSION"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#FFF"
            android:background="@color/style_color_primary_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <RadioGroup
            android:id="@+id/set_immediate_duration_radGroup"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/one_hour_radBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/two_hours_radBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/three_hours_radBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/four_hours_radBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/five_hours_radBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/six_hours_radBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>

        <Button
            android:id="@+id/save_btn"
            android:text="Save"
            android:textSize="30sp"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_send_comment"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>