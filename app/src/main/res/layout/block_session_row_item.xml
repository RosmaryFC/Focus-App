<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:elevation="8dp"
    android:paddingBottom="8dp"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:background="#FFFFFF">

    <!--TODO: add enable/disable btn for b.sessions in list view -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:layout_height="160dp"
        android:layout_marginTop="6dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_weight="0.20">

            <TextView
                android:id="@+id/txt_block_name"
                android:text="Study "
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:textColor="@color/text_color2"
                android:textSize="26sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>



            <ImageButton
                android:id="@+id/btn_menu"
                android:background="@drawable/ic_action_settingsicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/txt_block_name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/blue_indicator"
                android:id="@+id/block_on_button"
                android:layout_below="@+id/txt_block_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                />

            <TextView
                android:id="@+id/label_date"
                android:text="Date:"
                android:textStyle="bold"
                android:textColor="@color/text_color2"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.78" />

            <TextView
                android:id="@+id/txt_date"
                android:text=""
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight= "2.60" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/label_blank2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/label_start"
                android:text="Start time:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_color2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.24" />

            <TextView
                android:id="@+id/txt_start_time"
                android:text=""
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.20" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/label_blank3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/label_end"
                android:text="End time:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_color2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.22" />

            <TextView
                android:id="@+id/txt_end_time"
                android:text=""
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.17" />


        </LinearLayout>

        <TextView
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/label_recurring"
            android:text="Recurring:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text_color2"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="bottom"
        android:background="@color/style_color_primary_dark"/>

</android.support.v7.widget.CardView>



